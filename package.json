{
  "name": "oauth-apps-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for OAuth verification server and documentation",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:demo": "bun --cwd apps/demo dev",
    "dev:docs": "bun --cwd apps/docs dev",
    "dev": "bun run dev:demo",
    "build:demo": "bun --cwd apps/demo build",
    "build:docs": "bun --cwd apps/docs build",
    "build": "bun run build:demo && bun run build:docs",
    "start:demo": "bun --cwd apps/demo start",
    "start:docs": "bun --cwd apps/docs start",
    "test:demo": "bun --cwd apps/demo test",
    "lint:demo": "bun --cwd apps/demo lint",
    "install:all": "bun install"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
